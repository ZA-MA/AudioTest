<Page x:Class="AudioTest.view.pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AudioTest.view.pages"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="540"
      Title="MainPage">

    <Grid>
        <Grid HorizontalAlignment="Left" Height="350" Margin="210,150,0,0" VerticalAlignment="Top" Width="330">

            <Button Style="{StaticResource MyButtonStyle}" x:Name="Btn_start" HorizontalAlignment="Center" Height="40" Margin="0,276,0,0" VerticalAlignment="Top" Width="40" Click="Btn_start_Click" BorderBrush="#00707070">
                <Button.Background>
                    <ImageBrush ImageSource="/Images/buttonStart.png"/>
                </Button.Background>
            </Button>
            <TextBlock HorizontalAlignment="Center" Margin="0,30,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="69" Width="310" TextAlignment="Center" FontFamily="Segoe UI Black" FontSize="24"><Run Text="Экспертная система: "/><LineBreak/><Run Text="&quot;Аудиосистемы&quot;"/></TextBlock>
            <Image HorizontalAlignment="Center" Height="102" VerticalAlignment="Top" Width="118" Source="/Images/iconAudioTest.png" Margin="0,140,0,0"/>
        </Grid>

    </Grid>
</Page>
